@model Instagram.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LogInLayout.cshtml";
}
<h4>Đăng kí tài khoản mới</h4>
@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        <div class="col-md-12">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control login-input", placeholder = "Email..." })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-12">
            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control login-input", placeholder = "Tên tài khoản..." })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-12">
            @Html.TextBoxFor(m => m.FullName, new { @class = "form-control login-input", placeholder = "Họ và tên..." })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-12">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control login-input", placeholder = "Nhập mật khẩu..." })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-12">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control login-input", placeholder = "Nhập lại mật khẩu..." })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-12">
            <input type="submit" class="btn btn-default btn-command" value="Đăng kí" />
        </div>
    </div>
    <p>Đã có tài khoản? @Html.ActionLink("Đăng nhập", "Login")</p>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
