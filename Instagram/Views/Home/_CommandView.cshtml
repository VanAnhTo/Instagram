@using Instagram.ViewModel.Feed;
@model FeedLikeSummary
@Ajax.ActionLink(Model.Liked ? "Bỏ Thích" : "Thích", Model.Liked ? "Unlike" : "Like", new { feedId = Model.FeedId }, new AjaxOptions
{
    UpdateTargetId = "commandBox" + Model.FeedId,
    InsertionMode = InsertionMode.Replace,
    HttpMethod = "POST"
})-
<a href="javascript:comment('commentInput@(Model.FeedId)')">Bình luận</a>
@if (Model.TotalLike > 0)
{
    <div class="like-count">
        <a href="@Url.Action("GetLikedUserList", "Home", new { feedId = Model.FeedId })" class="modal-link">
            <i class="glyphicon glyphicon-heart"></i>
            <span>@Model.TotalLike người thích</span>
        </a>
    </div>
}